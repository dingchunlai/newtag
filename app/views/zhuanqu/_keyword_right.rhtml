    function g(o){
      return document.getElementById(o);
    }
    function HoverLi(m,n,limited){
      for(var i=0;i<limited;i++){
        g("nav-"+m+i).className="";
        g("tab-panel-"+m+i).style.display="none";
      }
      g("nav-"+m+n).className="hoveron";
      g("tab-panel-"+m+n).style.display="block";
    }
  </script>

