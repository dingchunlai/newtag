							<dd><a href="<%=r["url"]%>" target="_blank" title="<%=r["title"]%>"><%=ul(r["title"],18)%></a></dd>
						<%end%>
					<%end%>
				<%end%>
			</dl>
			<div class="pic01">
				<% unless ids[3].blank? %>
					<% article = Article.get_article(ids[3]) %>
					<a href="<%= article.detail_url %>" target="_blank"><img src="<%= HejiaArticle::image_url(article.ID) %>" alt="<%= article.title %>" width="143" height="96" /></a>				
				<% else %>
		            <a href="<%=@ci["lm3_url3"]%>" target="_blank"><img src="<%=@ci["lm3_image_url3"]%>" alt="<%=@ci["lm3_title3"]%>" width="143" height="96" /></a>
