<%kws = trim(@ci["lm1_kws"]).split(" ")%>
<div class="leftbox00 leftbox01 clearfix">
      <span class="span01">
        <%for kw in trim(@ci["lm1_tags"]).split(" ")%>
          <%=get_zq_inner_link(kw)%>
        <%end%>
      </span>
      <h2><a href="<%=@ci["lm1_bigurl"]%>" target="_blank"><%=@ci["lm1_bigtitle"]%></a></h2>
      <div class="box01">
        <a href="<%=@ci["lm1_url1"]%>" target="_blank"><img src="<%=@ci["lm1_image_url1"]%>" alt="<%=@ci["lm1_title1"]%>" width="212" height="249" /></a>
        <a href="<%=@ci["lm1_url1"]%>" target="_blank"><%=ul(@ci["lm1_title1"],12)%></a></div>
      <div class="text">
        <h3><a href="<%=@ci["lm1_url"]%>" target="_blank" title="<%=@ci["lm1_title"]%>"><%=ul(@ci["lm1_title"],20)%></a></h3>
        <p><%=ul(@ci["lm1_resume"],60)%></p>
        <span class="span02">[<a href="<%=@ci["lm1_url"]%>" target="_blank" title="详细">详细</a>]</span></div>
      <div class="list">
		  <% if kws[0] == "超小户型" and !Article::promotion_articles(4, "超小户型").blank? %>
            <% ids = Article::promotion_articles(4, "超小户型") %>
			<dl>
				<dt><strong><%=get_zq_inner_link(kws[0])%></strong></dt>
				<% unless ids[0,3].blank? %>
					<% for id in ids[0,3] %>
						<% article = Article.get_article(id) %>
						<dd><a href="<%= article.detail_url %>" target="_blank" title="<%= article.title %>"><%=ul(article.title,18)%></a></dd>
					<% end %>
					<% limit = 3 - ids[0,3].size %>
					<% if limit > 0 %>
						<%unless kws[0].nil?%>
							<%for r in get_articles_by_editor_keyword(kws[0], limit)%>
								<dd><a href="<%=r["url"]%>" target="_blank" title="<%=r["title"]%>"><%=ul(r["title"],18)%></a></dd>
							<%end%>
						<%end%>
					<% end %>
				<% else %>
					<%unless kws[0].nil?%>
